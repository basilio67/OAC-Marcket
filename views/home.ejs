<!DOCTYPE html>
<html>
<head>
    <title>OAC Market</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            background: #f6f7fb;
            margin: 0;
            padding: 0;
            color: #222;
        }
        .container {
            max-width: 480px;
            margin: 0 auto;
            padding: 24px 16px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        h1 {
            color: #2a7ae4;
            margin-bottom: 18px;
            font-size: 2em;
        }
        .card-list {
            display: flex;
            flex-direction: column;
            gap: 18px;
            width: 100%;
            margin: 0;
            padding: 0;
        }
        .card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(44,62,80,0.08);
            padding: 18px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 10px;
        }
        .btn {
            background: #2a7ae4;
            color: #fff;
            text-decoration: none;
            padding: 10px 22px;
            border-radius: 6px;
            font-weight: 500;
            transition: background 0.2s;
            border: none;
            cursor: pointer;
            font-size: 1.1em;
            margin-top: 8px;
            display: inline-block;
        }
        .btn:hover {
            background: #195ca2;
        }
        .logo {
            width: 200px;
            margin-bottom: 18px;
            margin-top: 18px;
            display: block;
        }
        nav {
            width: 100%;
            margin: 32px 0 16px 0;
        }
        nav ul {
            display: flex;
            justify-content: center;
            gap: 18px;
            list-style: none;
            padding: 0;
            margin: 0;
        }
        /* Novo gradiente s√≥ para os bot√µes do menu inferior */
        nav a {
            color: #fff;
            background: linear-gradient(135deg, #a18fff 0%, #7e57c2 100%);
            padding: 12px 32px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            box-shadow: 0 2px 8px rgba(44,62,80,0.08);
            display: block;
            transition: background 0.2s;
        }
        nav a:hover {
            background: linear-gradient(135deg, #7e57c2 0%, #2a7ae4 100%);
        }
        .main-card {
            background: linear-gradient(135deg, #eaf1fb 0%, #fff 100%);
            border-radius: 16px;
            box-shadow: 0 4px 16px rgba(44,62,80,0.10);
            padding: 32px 24px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 18px;
            margin-bottom: 24px;
            border: 1px solid #e3eaf3;
        }
        .main-card .btn-group {
            display: flex;
            flex-direction: column;
            gap: 16px;
            width: 100%;
            align-items: center;
            margin-top: 12px;
        }
        .main-card .btn {
            width: 220px;
            font-size: 1.15em;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        .main-card .icon {
            font-size: 1.3em;
        }
        .carousel-container {
            width: 100%;
            max-width: 340px;
            margin: 0 auto 18px auto;
            background: linear-gradient(135deg, #eaf1fb 0%, #f7eaff 100%);
            border-radius: 18px;
            box-shadow: 0 2px 12px rgba(44,62,80,0.07);
            padding: 12px 8px 18px 8px;
            border: 1px solid #e3eaf3;
        }
        .carousel {
            position: relative;
            height: 180px;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .carousel-item {
            display: none;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            position: absolute;
            width: 100%;
            transition: opacity 0.5s;
            opacity: 0;
            border-radius: 14px;
            background: rgba(255,255,255,0.7);
            box-shadow: 0 1px 6px rgba(44,62,80,0.06);
            padding: 10px 0;
        }
        .carousel-item.active {
            display: flex;
            opacity: 1;
            position: relative;
        }
        .carousel-item img {
            max-width: 120px;
            border-radius: 12px;
            box-shadow: 0 1px 8px #eaf1fb;
            background: #f7eaff;
        }
        .carousel-controls {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 6px;
        }
        .carousel-controls .btn {
            background: linear-gradient(135deg, #a18fff 0%, #2a7ae4 100%);
            color: #fff;
            border-radius: 50%;
            width: 36px;
            height: 36px;
            padding: 0;
            font-size: 1.2em;
            box-shadow: 0 1px 6px #eaf1fb;
            margin-top: 0;
        }
        .carousel-controls .btn:hover {
            background: linear-gradient(135deg, #7e57c2 0%, #195ca2 100%);
        }
        .carousel-item strong {
            color: #7e57c2;
            font-size: 1.08em;
        }
        .carousel-item span {
            color: #444;
            font-size: 0.98em;
        }
        .carousel-item .preco {
            color: #2a7ae4;
            font-weight: 600;
            font-size: 1em;
        }
        @media (max-width: 600px) {
            .container {
                padding: 10px 4px;
            }
            h1 {
                font-size: 1.3em;
            }
            .card {
                padding: 12px;
            }
            .btn {
                padding: 8px 12px;
                font-size: 1em;
            }
            nav a {
                padding: 10px 24px;
                font-size: 0.9em;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <img src="/logo.png" alt="OAC Market" class="logo" />
        <h1>Bem-vindo ao OAC Market!</h1>
        <% if (produtosRecentes && produtosRecentes.length > 0) { %>
            <div class="carousel-container">
                <h2 style="color:#7e57c2;font-size:1.15em;margin-bottom:8px;">Novidades</h2>
                <div class="carousel" id="carousel">
                    <% produtosRecentes.forEach(function(produto, idx) { %>
                        <div class="carousel-item<%= idx === 0 ? ' active' : '' %>">
                            <% if (produto.imagem) { %>
                                <img src="<%= produto.imagem %>" alt="Imagem do produto">
                            <% } %>
                            <div style="margin-top:6px;">
                                <strong><%= produto.nome %></strong><br>
                                <span class="preco">MT <%= produto.preco %></span><br>
                                <span><%= produto.descricao %></span><br>
                                <span style="font-size:0.93em;color:#888;">Loja: <%= produto.loja ? produto.loja.nome : 'N/A' %></span>
                                <div style="margin-top:6px;">
                                    <button class="like-btn" 
                                        data-id="<%= produto.id %>" 
                                        style="background:<%= produto.curtido ? '#e57373' : '#eee' %>;color:#7e57c2;border:none;border-radius:50%;width:32px;height:32px;font-size:1.2em;cursor:pointer;">
                                        <%= produto.curtido ? '‚ù§Ô∏è' : 'ü§ç' %>
                                    </button>
                                    <span class="like-count" style="color:#7e57c2;font-weight:600;margin-left:4px;"><%= produto.curtidas || 0 %></span>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
                <div class="carousel-controls">
                    <button id="prevBtn" class="btn">&#8592;</button>
                    <button id="nextBtn" class="btn">&#8594;</button>
                </div>
            </div>
        <% } %>
        <div class="main-card">
            <span style="font-size:1.15em;color:#195ca2;font-weight:500;margin-bottom:8px;">Acesse rapidamente:</span>
            <div class="btn-group">
                <a href="/produtos" class="btn"><span class="icon">üõí</span> Ver todos os produtos</a>
                <a href="/cadastro" class="btn"><span class="icon">üìù</span> Comece a vender</a>
                <a href="/login" class="btn"><span class="icon">üîë</span> Login</a>
            </div>
        </div>
        <nav>
            <ul>
                <li>
                    <a href="/artigos">Artigos</a>
                </li>
                <li>
                    <a href="/dicas">Dicas</a>
                </li>
                <li>
                    <a href="/novidades">Novidades</a>
                </li>
            </ul>
        </nav>
        <div style="margin-top:32px;text-align:center;">
            <a href="/sobre" style="color:#2a7ae4;margin:0 10px;">Sobre</a> |
            <a href="/contato" style="color:#2a7ae4;margin:0 10px;">Contato</a> |
            <a href="/privacidade" style="color:#2a7ae4;margin:0 10px;">Pol√≠tica de Privacidade</a> |
            <a href="/termos" style="color:#2a7ae4;margin:0 10px;">Termos de Uso</a>
        </div>
    </div>
    <script>
        // Carrossel simples em JS
        window.addEventListener('DOMContentLoaded', function() {
            const items = document.querySelectorAll('.carousel-item');
            if (items.length === 0) return;
            let current = 0;
            function showItem(idx) {
                items.forEach((el, i) => el.classList.toggle('active', i === idx));
            }
            document.getElementById('prevBtn').onclick = function() {
                current = (current - 1 + items.length) % items.length;
                showItem(current);
            };
            document.getElementById('nextBtn').onclick = function() {
                current = (current + 1) % items.length;
                showItem(current);
            };
            setInterval(() => {
                current = (current + 1) % items.length;
                showItem(current);
            }, 4000);
        });
        // Curtidas AJAX
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.like-btn').forEach(function(btn) {
                btn.onclick = function(e) {
                    e.preventDefault();
                    const id = btn.getAttribute('data-id');
                    const isLiked = btn.textContent === '‚ù§Ô∏è';
                    fetch('/produto/' + id + (isLiked ? '/descurtir' : '/curtir'), {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' }
                    })
                    .then(res => res.json())
                    .then(data => {
                        btn.textContent = isLiked ? 'ü§ç' : '‚ù§Ô∏è';
                        btn.style.background = isLiked ? '#eee' : '#e57373';
                        btn.nextElementSibling.textContent = data.curtidas;
                    });
                };
            });
        });
    </script>
</body>
</html>
